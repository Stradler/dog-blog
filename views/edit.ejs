<% include ./partials/header %>
<div class="ui main text container segment">
	 <div class="ui huge header">New Blog</div>
	 <form class="ui form" action="/dogs/<%= dog._id %>?_method=PUT" method="POST" >
	 	 <div class="filed">
	 	 	 <label>Name</label>
	 	 	 <input type="text" name="dog[name]" placeholder="name" value="<%= dog.name %>">
	 	 </div>
	 	 <div class="filed">
	 	 	 <label>Image</label>
	 	 	 <input type="text" name="dog[image]" placeholder="image" value="<%= dog.image %>">
	 	 </div>
	 	 <div class="filed">
	 	 	 <label>Age</label>
	 	 	 <input type="text" name="dog[age]" placeholder="age" value="<%= dog.age %>">
	 	 </div>
	 	 	 	 <div class="filed">
	 	 	 <label>His Cool Story</label>
	 	 	 <textarea name="dog[description]"><%= dog.description %></textarea>
	 	 </div>
	 	 <button class="ui violet big basic button">Submit!</button>
	 </form>
</div>

<% include ./partials/footer %>